#!/bin/sh
#
usage="\
Usage: WizardsToolkit-config [--cflags] [--cppflags] [--exec-prefix] [--ldflags] [--libs] [--prefix] [--version]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      echo "Example: gcc \`WizardsToolkit-config --cflags --cppflags\` source.c \`WizardsToolkit-config --ldflags --libs\`" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case $1 in
    --prefix)
      echo @PREFIX_DIR@
      ;;
    --exec-prefix)
      echo @EXEC_PREFIX_DIR@
      ;;
    --version)
      echo @PACKAGE_VERSION@
      ;;
    --cflags)
      echo '@CFLAGS@'
      ;;
    --cppflags)
      echo '@WIZARD_CPPFLAGS@'
      ;;
    --ldflags)
      echo '@WIZARD_LDFLAGS@'
      ;;
    --libs)
      echo '@WIZARD_LIBS@'
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

